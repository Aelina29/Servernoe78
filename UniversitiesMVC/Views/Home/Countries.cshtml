@{
    ViewData["Title"] = "Countries";
}

<form method="post" asp-action="CreateCountry">
    <div>
        <p>Добавить Страну</p>
        <label>Country Name</label>
        <input type="text" name="CountryName" />
    </div>
    <button type="submit">Добавить</button>
</form>
<br />
<form method="post" asp-action="DeleteCountry">
    <div>
        <p>Удалить Страну</p>
        <label>Country Name</label>
        <input type="text" name="CountryName" />
    </div>
    <button type="submit">Удалить</button>
</form>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Country Name</th>
            <th>Country Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ranking in Model)
        {
            <tr>
                <td>@(Model.IndexOf(ranking) + 1)</td>
                <td>@ranking.CountryName</td>
                <td>@ranking.Id</td>
            </tr>
        }
    </tbody>
</table>